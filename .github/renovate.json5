{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    // "config:base",
    "docker:enableMajor",
    ":disableRateLimiting",
    ":dependencyDashboard",
    ":semanticCommits",
    ":automergeDigest",
    ":automergePatch",
    ":automergeMinor",
    ":automergeBranch",
  ],
  "ignoreTests": true,
  "flux": {
    "fileMatch": [
      "(^|/)k8s/.+\\.ya?ml(\\.j2)?$"
    ]
  },
  "helm-values": {
    "fileMatch": [
      "(^|/)k8s/.+\\.ya?ml(\\.j2)?$"
    ]
  },
  "kubernetes": {
    "fileMatch": [
      "(^|/)ansible/.+\\.ya?ml(\\.j2)?$",
      "(^|/)k8s/.+\\.ya?ml(\\.j2)?$"
    ]
  }
}
