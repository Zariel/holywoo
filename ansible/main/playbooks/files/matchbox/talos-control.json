{
    "id": "talos-control",
    "name": "talos-control",
    "boot": {
        "kernel": "/assets/vmlinuz",
        "initrd": [
            "/assets/initramfs.xz"
        ],
        "args": [
            "initrd=initramfs.xz",
            "init_on_alloc=1",
            "slab_nomerge",
            "pti=on",
            "console=tty0",
            "console=ttyS0",
            "printk.devkmsg=on",
            "talos.platform=metal",
            "talos.config=http://192.168.254.10/assets/controlplane.yaml"
        ]
    }
}
